<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical"
    tools:context=".application.presentation.fragments.search.SearchFragment">

    <LinearLayout
        android:background="@color/headLineColor"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="28sp"

            />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@android:style/Widget.Button"
            android:backgroundTint="@color/headLineColor"
            android:background="@drawable/search_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/trendingMovie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trendingMovie8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Trending"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>