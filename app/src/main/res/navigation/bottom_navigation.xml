<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/moviesFragment">
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.tgtmoviesapp.application.presentation.fragments.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            app:popUpToInclusive="true"
            android:id="@+id/action_moviesFragment_to_tvShowFragment"
            app:destination="@id/tvShowFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowFragment"
        android:name="com.example.tgtmoviesapp.application.presentation.fragments.TvShowFragment"
        android:label="fragment_tv_show"
        tools:layout="@layout/fragment_tv_show" >
        <action
            app:popUpToInclusive="true"
            android:id="@+id/action_tvShowFragment_to_celebritiesFragment"
            app:destination="@id/celebritiesFragment" />
    </fragment>
    <fragment
        android:id="@+id/celebritiesFragment"
        android:name="com.example.tgtmoviesapp.application.presentation.fragments.CelebritiesFragment"
        android:label="CelebritiesFragment" >
        <action
            android:id="@+id/action_celebritiesFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tgtmoviesapp.application.presentation.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_secondSearchFragment"
            app:destination="@id/secondSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondSearchFragment"
        android:name="com.example.tgtmoviesapp.application.presentation.fragments.SecondSearchFragment"
        android:label="fragment_second_search"
        tools:layout="@layout/fragment_second_search" />
</navigation>